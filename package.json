{
    "name": "new-bdm",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "npm run lint:js:file & npm run lint:css:file",
        "lint:js": "eslint",
        "lint:js:fix": "npm run lint:js -- --fix",
        "lint:js:file": "npm run lint:js -- --format=html --output-file=reports/eslint_js.html",
        "lint:css": "stylelint src/scss/**/*.scss",
        "lint:css:fix": "npm run lint:css -- --fix",
        "lint:css:file": "npm run lint:css -- --output-file=reports/stylelint_scss.txt --formatter=verbose"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.4.4",
        "@mui/material": "^6.4.4",
        "@mui/x-charts": "^7.27.1",
        "@mui/x-data-grid": "^7.27.1",
        "@mui/x-date-pickers": "^7.27.0",
        "dayjs": "^1.11.13",
        "prettier": "^3.5.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.1.5",
        "sass": "^1.85.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.6",
        "@eslint/js": "^9.19.0",
        "@stylistic/eslint-plugin": "^4.0.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.20.1",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "npm": "^11.1.0",
        "stylelint": "^16.14.1",
        "stylelint-config-sass-guidelines": "^12.1.0",
        "stylelint-declaration-strict-value": "^1.10.7",
        "stylelint-prettier": "^5.0.3",
        "stylelint-scss": "^6.11.0",
        "vite": "^6.1.0",
        "vite-plugin-compression2": "^1.3.3"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    }
}
